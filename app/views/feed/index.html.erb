<main class="feed">
    <div class="container">
        <h1 class="feed__title title--lg">Take a seat and enjoy! </h1>
        <% for post in @posts %>
            <div class="post-item">
                <p class="post-item__title"><%= post.title %></p>
                <p class="post-item__body"><%= limit_text(post.body) %></p>
                <p class="post-item__date"><%= pretty_date(post.created_at) %></p>
            </div>
        <% end %>
    </div>
</main>
