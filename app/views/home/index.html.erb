<main class="feed">
    <div class="container">
        <h1 class="feed__title title--lg">Take a seat and enjoy! </h1>
        <% for post in @posts %>
            <div class="post">
                <p class="post__title"><%= post.title %></p>
                <p class="post__body"><%= post.body %></p>
                <p class="post__date"><%= pretty_date(post.created_at) %></p>
            </div>
        <% end %>
    </div>
</main>
