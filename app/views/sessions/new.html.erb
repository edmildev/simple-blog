<main class="container">
    <div class="auth">

        <div class="auth__form">

            <h1 class="auth__title title title--lg">Take a break and let's have a coffee...</h1>
            <p class="title title--md">Login</p>

            <%= form_with(url: auth_path, local: true, class: 'form') do |f| %>
                <div class="field-group">
                    <%= f.text_field :email, class: 'field field__text', placeholder: 'Email' %>
                </div>
                <div class="field-group">
                    <%= f.password_field :password, class: 'field field__password', placeholder: 'Password' %>
                </div>
                <%= f.submit "Enter", class: 'button button--block button--primary' %>
            <% end %>
        </div>
        <div class="image">
            <%= image_tag("login.svg", :alt => "people waking on the streat") %>
        </div>
    </div>
</main>

