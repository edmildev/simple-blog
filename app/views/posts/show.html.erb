<main class="post">
    <div class="container">
        <%= render 'authors/profile', author: @post.author %>

        <div class="post__header">
            <h1 class="post__title title--lg"><%= @post.title %></h1>
            <div class="post__information">
                <p class="post__date"><%= pretty_date(@post.created_at) %></p>
            </div>
        </div>

        <article class="article">
            <%= render_markdown(@post.body) %>
        </article>
    </div>
</main>

<% content_for :title do %> 
    <%= "#{@post.title} |" %> 
<% end %>

<% content_for :head do %>
 <%= tag.meta(name:"description", content: limit_text(@post.summary)) %>
 <%= tag.meta(name:"author", content: @post.author.name) %>
<% end %>
