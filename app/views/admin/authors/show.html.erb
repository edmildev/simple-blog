<main class="author">
    <div class="container">
        <div class="author__header">
            <div>
                <div class="author__circle">
                    <img alt="author image" src="https://avatars3.githubusercontent.com/u/12303580?s=460&u=3af0090957164cbabeaa8cbc48350a15371c0098&v=4" class="author__image" />
                </div>
            </div>
            <div class="author__name">
                <p><%= @author.name %></p>
            </div>
        </div>
        <p class="author__posts title--sm title--bold">My Articles</p>
        <% for post in @posts %>
            <div class="post">
                <p class="post__title"><%= post.title %></p>
                <p class="post__body"><%= post.body %></p>
                <p class="post__date"><%= pretty_date(post.created_at) %></p>
            </div>
        <% end %>
    </div>
</main>
