<main class="container">
    <div class="auth">

        <div class="auth__form">

            <h1 class="auth__title title">Take a break and let's have a coffee...</h1>

            <p>Login</p>
            <%= form_with(url: admin_sessions_path, local: true, class: 'form') do |f| %>
                    <%= f.text_field :email, class: 'field field__text', placeholder: 'Email' %>
                    <%= f.password_field :password, class: 'field field__password', placeholder: 'Password' %>
                    <%= f.submit "Enter", class: 'button button--primary' %>
            <% end %>
        </div>
        <div class="image">
            <%= image_tag("login.svg", :alt => "people waking on the streat") %>
        </div>
    </div>
</main>

